{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "globals": {
      "angular": true,
      "PRODUCTION": true
    },
    "rules": {
      "semi": ["error", "never"]
    }
  }
}
